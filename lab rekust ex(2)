#include<iostream>
#include<math.h>
using namespace std;


int SumDigit(int n)
{
    if (n < 10) return n;
    else
        return SumDigit(n / 10) + n % 10;
}


int main()
{
    int n;
    cout << "Enter the number:";
    cin >> n;
    while (!(cin >> n)||n<0)
    {
        cin.clear();
        cin.ignore(cin.rdbuf()->in_avail()); 
        cout << "ERROR! Enter the positive number:";
    }
    cout<< SumDigit(n);

}

