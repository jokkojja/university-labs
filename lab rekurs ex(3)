#include<iostream>

using namespace std;


 int G(int n);
 int F(int n);

 int F(int n)
 {

	 if (n >= 2)
	 {

		 return (4 * F(n - 1) - G(n - 1));
		 
	 }
	 else
	 {
		 
		 return 4;
	 }
	 
 }


int G(int n)
{
	
		if (n >= 2)
		{
			
			return (2 * F(n - 1) - G(n - 1));
			
		}
		else
		{
		
			return -2;
		}
}


int main()
{
	cout << "Numbers of F(n):" << endl;
	for (int i = 1; i <= 10; i++)
		cout <<"F"<<"("<<i<<")"<<"="<< F(i) << "\n";

	cout << endl;


	cout << endl << "Numbers of G(n):" << endl;
	for (int i = 1; i <= 10; i++)
		cout << "G" << i << "=" << G(i) << "\n";
}  
