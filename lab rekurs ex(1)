#include<iostream>
#include<ctime>
using namespace std;



void RandomFill(int* M, int n)
{ 
	srand(time(NULL));

	cout << "Array:\n";

	for (int i = 0; i < n; i++)
	{
		M[i] = rand() % 100;
		cout << M[i] << "\n";
		 
	}
}

unsigned CountEven(int* numbers, int size)
{
	if (size > 1) {
		
		 return (*numbers % 2 == 0) + CountEven(numbers + 1, --size);
	
	              }
	else if (size == 1) 
	   {
		
		return *numbers % 2 == 0;
	   }
	else
	    {
		return 0;
	    }

}



int main() 
{
	int i = 0;
	int n;
	cout << "Number of elements in array:";
	cin >> n;
	while (!(cin >> n)||n<0)
	{
		cin.clear();
		cin.ignore(cin.rdbuf()->in_avail()); //
		cout << "ERROR! Enter the positive number:";
	}
	int* a = new int[n];
	RandomFill(a,n);
	cout<<"The number of even numbers: "<<CountEven(a, n);
	delete [] a;
}
